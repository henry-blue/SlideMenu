<?xml version="1.0" encoding="utf-8"?>
<slidemenu.app.com.library.SlideMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/head_1"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/text_name"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#aa9911"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#55727272"
            android:gravity="center"
            android:text="标记"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</slidemenu.app.com.library.SlideMenuLayout>